  <PropertyGroup>
    <ProjectGuid>{6F443870-9519-4B25-8C0A-2C3F7C4056CE}</ProjectGuid>
		<NSISPath>&quot;C:\Program Files (x86)\NSIS\makensis.exe&quot;</NSISPath>
		<OutDir>bin\x86\Debug\</OutDir>
  </PropertyGroup>
  <ItemGroup>
    <installScript Include="InstallerScript.nsi" />
